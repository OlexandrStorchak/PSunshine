<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <EditTextPreference
        android:title="@string/pref_location_title"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_def_location"
        android:inputType="text"
        android:singleLine="true"
        />
    <ListPreference
        android:title="@string/pref_measure_title"
        android:key="@string/pref_measure_key"
        android:defaultValue="@string/pref_def_measure"
        android:entryValues="@array/pref_measure_arr_values"
        android:entries="@array/pref_measure_arr_titles"
        />

</PreferenceScreen>